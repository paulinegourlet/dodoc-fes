doctype html
html
  head
    link(rel='stylesheet', href='/css/mediaelement/mediaelementplayer.css')
    link(rel='stylesheet', href='/css/style.css')
    title #{session} | #{title}
  body.capture

    include templates/header.jade

    nav.titleAndActions
      div.buttons.alignRight
        div.button
          a(href="/select/#{session}" class="btn icon bibli")
            include templates/images/icones-01.svg
            .count-add-media +1

    div.container

      div.media-choice
        div.btn-choice
          button#photo Image
          button#video-btn Vid√©o
          button#stopmotion Stop motion
          button#audio Son

      div.left
        div.video-view
          video(id="video" autoplay)

          canvas(id="canvas-audio" width="480" height="256")

        div.capture
          div.photo-capture
            button#capture-btn
              img(src="/images/save.svg")
          div.video-capture
            div.video-save
              button(id='record-btn')
                img(src="/images/save.svg")
              button(id='stop-btn' disabled)
                img(src="/images/stop.svg")
            span#elasped-time
          div.stopmotion-capture
            button#start-sm
              img(src="/images/save.svg")
            button#capture-sm
              img(src="/images/save.svg")
          div.audio-capture
            button(id='start-recording')
              img(src="/images/save.svg")
            button(id='stop-recording' disabled)
              img(src="/images/stop.svg")

      div.right

        div.title.form-meta
          div.clear
            button#clear
              img(src='/images/clear.svg')
        div.screenshot
          canvas#canvas.canvas-view
          canvas(id="canvas-equalizer" width=480 height=256)
          video(id="camera-preview" autoplay controls loop)
          button#stop-sm
            img(src="/images/enregistre.svg")
        
        div.son
          audio(id="son" src="/star-wars-theme.mp3" autoplay controls)


    //- scripts
    include templates/footer.jade

    //- some packages for getting and attaching user media
    script(src="/js/lib/getusermedia.bundle.js")
    script(src="/js/lib/attachmediastream.bundle.js")
    //- a package for playing back the recording 
    script(src="/js/lib/fauxplay.bundle.js")
    script(src="/js/lib/video-recorder.bundle.js")
    script(src="/js/lib/RecordRTC.js")
    //- A real time javascript webm encoder based on a canvas hack
    script(src="/js/lib/whammy.min.js")
    //- custom audio and video player
    script(src="/js/lib/mediaelement-and-player.min.js")
    script(src='/js/capture.js')

